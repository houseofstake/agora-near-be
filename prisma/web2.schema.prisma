generator web2client {
    provider        = "prisma-client-js"
    output          = "../src/generated/prisma-web2"
    previewFeatures = ["multiSchema"]
}

datasource web2db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    schemas  = ["web2"]
}

model delegate_statements {
    address          String  @id
    signature        String
    statement        String
    publicKey        String
    message          String
    topIssues        Json?
    agreeCodeConduct Boolean
    twitter          String?
    discord          String?
    email            String?
    warpcast         String?

    @@index([email], map: "idx_delegate_statements_email")
    @@schema("web2")
}

model cache {
    key       String   @id
    data      Json
    expiresAt DateTime @map("expires_at") @web2db.Timestamp(6)
    createdAt DateTime @default(now()) @map("created_at") @web2db.Timestamp(6)
    updatedAt DateTime @updatedAt @map("updated_at") @web2db.Timestamp(6)

    @@index([expiresAt], map: "idx_cache_expires_at")
    @@map("cache")
    @@schema("web2")
}
